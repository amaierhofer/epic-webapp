
!!!
%html
  %head
    %title
      = yield(:title) || "Untitled"

    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = csrf_meta_tag
    = stylesheet_link_tag 'design.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'              
    = javascript_include_tag :defaults
    = javascript_include_tag 'reloader' if Rails.env == 'development'
    = yield(:head)
  
  %body

  #topbar 
    #header
      #logo
        %img{:src => '/images/cab_view.png'}
        %span Epic Services

      %ul#navi
        %li= link_to 'intro', :about
        %li= link_to 'use case', :about_use_cases
        %li= link_to 'technology', :about_technology
        %li= link_to 'artifacts', :about_artifacts
  #main 
    #container
      = content_tag :h1, yield(:title) if show_title?
      - flash.each do |name,msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      = yield

