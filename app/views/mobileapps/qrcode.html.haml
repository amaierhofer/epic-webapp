- title 'Connect your Phone'

:javascript
  $(function() {
    var user = $.nmk.session.getUser();
    var url = Strophe.getNodeFromJid(user.jid) + ":" + user.pw + "@#{APP_CONFIG[:domain]}";

    var img = '<img src="http://qrcode.kaywa.com/img.php?s=5&d=' + url + '"></img>';
    $.nmk.log('url: ' + url);
    $("ul.debug").append("<li>" + url + "</li>");
    $("#qrcode").append(img);
  });

